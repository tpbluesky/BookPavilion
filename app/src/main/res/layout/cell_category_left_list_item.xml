<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_category_left_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/app_theme_color_dark"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_indicator_color"
        android:layout_width="@dimen/category_rv_left_indicator_width"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="软件工程"
        android:textColor="@color/app_theme_text_color_primary" />

</LinearLayout>